double myPow(double x, int n) 
    {
        double ans = 1.0;
        long  N = abs(n);
        while(N)
        {
            if(N%2 == 0)
            {
                x*=x;
                N/=2;
            }
            else
            {
                ans = ans*x;
                --N;
            }
        }
        if(n<0)
        {
            return 1/ans;
        }
        return ans;
    }
